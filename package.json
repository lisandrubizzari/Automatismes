{
  "name": "automatismes",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "build:js": "esbuild js/*.js --outdir=dist/js --bundle --minify",
    "build:css": "postcss styles.css --use autoprefixer --no-map --output dist/styles.min.css",
    "build": "npm run build:js && npm run build:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.21.4",
    "postcss-cli": "^10.1.0"
  }
}
